<div class="row">
  <div class="col-xs-1 col-md-2"></div>
  <div class="col-xs-10 col-md-8 post-title"><%= post.title %></div>
  <div class="col-xs-1 col-md-2"></div>
</div>
<div class="row">
  <div class="col-xs-1 col-md-2"></div>
  <div class="col-xs-10 col-md-8 post-byline">
    <%= post.author.name %> - <%= post.created_at.to_date.to_s(:long) %>
    <% if user_signed_in? %>
      (<%= link_to "edit", edit_post_path(post) %> | <%= link_to "delete", post_path(post), method: :delete %>)
    <% end %>
  </div>
  <div class="col-xs-1 col-md-2"></div>
</div>
<div class="row">
  <div class="col-xs-4"></div>
  <div class="col-xs-4"><hr></div>
  <div class="col-xs-4"></div>
</div>
<div class="row">
  <div class="col-xs-2 col-md-3"></div>
  <div class="col-xs-8 col-md-6">
    <%= post.rendered_body.html_safe %>
  </div>
  <div class="col-xs-2 col-md-3"></div>
</div>