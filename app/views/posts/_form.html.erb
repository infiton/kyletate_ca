<%= form_for(@post) do |f| %>
  <div class="form-group">
    <%= f.text_field :title, placeholder: "Title", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, placeholder: "Body", class: 'form-control', rows: "20" %>
  </div>
  <%= f.submit class: "btn btn-flat btn-primary float-right" %>
<% end %>